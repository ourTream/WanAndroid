<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_small">

    <ImageView
        android:id="@+id/iv_main_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/lightGray"
        android:scaleType="center"
        android:src="@mipmap/people"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="250dp"
        android:text="@string/app_name"
        android:textColor="@color/normalGray"
        android:textSize="@dimen/text_normal"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_list"
        app:layout_constraintLeft_toRightOf="@id/iv_main_list"
        app:layout_constraintTop_toTopOf="@id/iv_main_list" />

    <ImageView
        android:id="@+id/iv_main_list_share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/margin_normal"
        android:scaleType="center"
        android:src="@mipmap/share"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_main_list" />

    <ImageView
        android:id="@+id/iv_main_list_Like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="center"
        android:src="@mipmap/like"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_list"
        app:layout_constraintRight_toLeftOf="@id/iv_main_list_share"
        app:layout_constraintTop_toTopOf="@id/iv_main_list"
        app:layout_goneMarginRight="@dimen/margin_big" />

    <TextView
        android:id="@+id/tv_main_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_big"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="2"
        android:textColor="@color/normalBlack"
        android:textSize="@dimen/text_big"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_list" />

    <TextView
        android:id="@+id/tv_main_list_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:text="@string/label"
        android:textColor="@color/normalGray"
        android:textSize="@dimen/text_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_list_content"
        app:layout_goneMarginTop="@dimen/margin_big" />

    <TextView
        android:id="@+id/tv_main_list_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normalBlue"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_list_tag_title"
        app:layout_constraintLeft_toRightOf="@id/tv_main_list_tag_title" />

    <TextView
        android:id="@+id/tv_main_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_normal"
        android:textColor="@color/normalGray"
        android:textSize="@dimen/text_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_list_content"
        app:layout_goneMarginTop="@dimen/margin_big" />
</android.support.constraint.ConstraintLayout>